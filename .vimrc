execute pathogen#infect()

" solarized options
let g:solarized_termcolors=256
let g:solarized_contrast = "high"
let g:solarized_visibility = "high"

syntax enable
set background=dark
colorscheme solarized


set tabstop=4
set softtabstop=4
set expandtab

set number
set cursorline                                                              

filetype indent on

set wildmenu

set lazyredraw

set showmatch
